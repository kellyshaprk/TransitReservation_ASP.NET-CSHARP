@model IEnumerable<BarrieXPress.Models.Route>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .jumbotron {
        background: url(https://www.yrt.ca/en/rotatingimages/navTab01/intbanner.jpg);
        height: 500px;
        width: 1400px;
        margin-left: -130px;
    }

    #h1 {
        color: white;
        margin-top: 350px;
        font-size: 115px;
        font-weight: bold;
    }
</style>

<div class="jumbotron">
    <h1 id="h1"> Routes</h1>
</div>

<h2>Routes Index</h2>
<p>
    <button class="btn btn-primary"
            onclick="loadDoc('@Url.Action("Create", "Routes")')">
        Create New
    </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Distance)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                <button class="btn btn-primary"
                        onclick="loadDoc('@Url.Action("Details", "Routes",new { id = item.RouteId })')">
                    Details
                </button>
            </td>
        </tr>
    }
</table>
<div id="details"></div>
